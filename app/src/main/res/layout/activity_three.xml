<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutTA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ThreeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTA"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#2B86B4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        app:title="Магазин у дома"
        app:titleTextColor="@color/white"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTARV"
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_margin="26dp"
        app:layout_constraintBottom_toTopOf="@+id/floatingActionButtonTAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarTA"
        tools:listitem="@layout/list_item"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonTAFA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_assignment_turned_in_24"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/gradient_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>